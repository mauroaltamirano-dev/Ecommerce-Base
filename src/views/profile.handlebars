<div class="profile-page">
  <div class="profile-container">
    <h2 class="profile-title">üë§ Mi Perfil</h2>
    <div class="profile-card">
      <div class="avatar" id="avatar-profile">
        <img
          src="{{usuario.avatar}}"
          alt="avatar"
          onerror="this.src='/img/yo.jpg'"
        />
      </div>
      <div class="profile-field">
        <p>ID: {{usuario.id}}</p>
      </div>
      <div class="profile-field" data-id="68efb7502fe44041dbb7056a">
        <span class="label">Nombre:</span>
        <span class="value value-name">{{usuario.name}}</span>
      </div>
      <div class="profile-field">
        <span class="label">Apellido:</span>
        <span class="value">{{usuario.last_name}}</span>
      </div>
      <div class="profile-field">
        <span class="label">Correo electr√≥nico:</span>
        <span class="value">{{usuario.email}}</span>
      </div>
      <div class="profile-field">
        <span class="label">Rol:</span>
        <span class="value">{{usuario.role}}</span>

        <div>
          {{#ifEquals usuario.role "USER"}}
            <form
              action="/api/auth/setadmin"
              method="POST"
              style="display: inline;"
            >
              <button type="submit" class="nav-link">
                Cambiar a ADMIN
              </button>
            </form>
          {{/ifEquals}}
          {{#ifEquals usuario.role "ADMIN"}}
            <form
              action="/api/auth/setuser"
              method="POST"
              style="display:inline;"
            >
              <button type="submit" class="nav-link">
                Cambiar a USER
              </button>
            </form>
          {{/ifEquals}}
        </div>

      </div>
    </div>
