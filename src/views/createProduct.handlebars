<div class="admin-products container-p">
  <h1 class="form-title">{{title}}</h1>

  <form id="productForm" class="product-form" data-id="{{producto._id}}">
    <div class="form-group">
      <label for="title">Título</label>
      <input
        type="text"
        id="title"
        name="title"
        value="{{producto.title}}"
        placeholder="Título del producto"
        required
      />
    </div>

    <div class="form-group">
      <label for="price">Precio</label>
      <input
        type="number"
        id="price"
        name="price"
        value="{{producto.price}}"
        placeholder="Ej: 19999"
        required
      />
    </div>

    <div class="form-group">
      <label for="stock">Stock</label>
      <input
        type="number"
        id="stock"
        name="stock"
        value="{{producto.stock}}"
        placeholder="Ej: 50"
      />
    </div>

    <div class="form-group">
      <label for="code">Código único</label>
      <input
        type="text"
        id="code"
        name="code"
        value="{{producto.code}}"
        placeholder="Ej: XX0XX-XX00"
        required
      />
    </div>

    <div class="form-group">
      <label for="category">Categoría</label>
      <select id="category" name="category" required>
        <option value="">Seleccionar categoría</option>
        {{#each categorias}}
          <option
            value="{{this}}"
            {{#ifEquals this ../producto.category}}selected{{/ifEquals}}
          >
            {{this}}
          </option>
        {{/each}}
      </select>
    </div>

    <div class="form-group">
      <label for="description">Descripción</label>
      <textarea
        id="description"
        name="description"
        placeholder="Describe el producto"
        required
      >{{producto.description}}</textarea>
    </div>

    <div class="form-group">
      <label for="image">URL de imagen o imágenes</label>
      <input
        type="url"
        id="image"
        name="image"
        value="{{producto.image}}"
        placeholder="https://ejemplo.com/imagen.jpg"
        required
      />
    </div>

    <button type="submit" class="btn-add">
      {{#if producto}}Actualizar producto{{else}}Agregar producto{{/if}}
    </button>
  </form>
</div>

<script src="/js/products.js"></script>
