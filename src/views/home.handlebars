<div class="home-container">
  <!-- SIDEBAR -->
  <aside class="sidebar">
    <h2>Filtrar por categor√≠a</h2>
    <form method="get" class="filter-form">
      <select name="categoria" id="categoria" onchange="this.form.submit()">
        <option value="">Todas las categor√≠as</option>
        {{#each categorias}}
          <option value="{{this}}" {{#ifEquals ../categoriaSeleccionada this}}selected{{/ifEquals}}>
            {{this}}
          </option>
        {{/each}}
      </select>
    </form>
  </aside>

  <!-- CONTENIDO PRINCIPAL -->
  <main class="productos-section">
    <div class="grid-productos">
      {{#each productos}}
        <div class="card-producto" data-pid="{{this._id}}">
          <div class="img-container">
            <img src="{{this.image}}" alt="Imagen de {{this.title}}" />
          </div>
          <div class="card-body">
            <h3>{{this.title}}</h3>
            <p class="precio">${{formatNumber this.price}}</p>
            {{#if (gt this.stock 0)}}
              <button class="btn-add" data-pid="{{this._id}}">üõí Agregar</button>
            {{else}}
              <button class="btn-add disabled" disabled>‚ùå Sin stock</button>
            {{/if}}
          </div>
        </div>
      {{/each}}
    </div>
  </main>
</div>

<script src="/js/global.js"></script>
<script src="/js/home.js"></script>
