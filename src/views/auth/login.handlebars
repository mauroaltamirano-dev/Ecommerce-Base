{{#if query.registroExitoso}}
  <div class="success-message">¡Registro exitoso! Ahora podés iniciar sesión.</div>
{{/if}}

<div class="form-container">
  <h2>Iniciar sesión</h2>
  <form action="/api/auth/login" method="POST">
    <input type="email" name="email" placeholder="Correo electrónico" required>
    <input type="password" name="password" placeholder="Contraseña" required>
    <button type="submit">Iniciar sesión</button>
  </form>

  <div class="form-footer">
    <a href="/register">¿No tenés cuenta? Registrate</a>
  </div>

  <hr>
  <div class="logins">
    <a href="/api/auth/google" class="github-button">Entrar con Google</a>
  </div>
</div>

{{#if error}}
<div class="error-message">
  {{error}}
</div>
{{/if}}