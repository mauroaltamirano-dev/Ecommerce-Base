<nav class="navbar">
  <div class="nav-left">
    <a href="/" class="nav-link logo">🛍️ Ecommerce-Hardware</a>

    {{#ifEquals usuario.role "ADMIN"}}
      <a href="/realtimeproducts" class="nav-link">Administrar Productos</a>
    {{/ifEquals}}

    <div class="nav-categorias">
      <select id="categoria-select" onchange="location.href='/?categoria=' + this.value">
        <option value="">Seleccionar Categoría</option>
        {{#each categorias}}
          <option value="{{this}}" {{#ifEquals ../categoriaSeleccionada this}}selected{{/ifEquals}}>
            {{this}}
          </option>
        {{/each}}
      </select>
    </div>
  </div>

  <div class="nav-right">
    {{#if usuario}}
      <div class="profile-menu">
        <div class="avatar" id="avatar-btn">
          <img
            src="{{usuario.avatar}}"
            alt="avatar"
            onerror="this.src='/img/yo.jpg'"
          />
        </div>

        <div class="dropdown" id="dropdown-menu">
          <a href="/profile">👤 Mi perfil</a>
          <a href="/api/auth/signout">🚪 Cerrar sesión</a>
        </div>
      </div>
    {{else}}
      <a href="/login" class="nav-link login-btn">🔐 Iniciar sesión</a>
    {{/if}}
<div class="cart">
  <a href="/cart/{{carritoId}}" class="nav-link icon-link" title="Carrito" id="cart-navbar">
    🛒
    <span class="cart-count" id="cart-count">0</span>
  </a>
</div>
  </div>
</nav>

<script src="/js/navbar.js"></script>