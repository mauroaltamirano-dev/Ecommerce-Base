<nav class="navbar">
  <div class="nav-left">
    <a href="/" class="nav-link">🏠 Inicio</a>
    {{#ifEquals usuario.role "ADMIN"}}
    <a href="/realtimeproducts" class="nav-link">➕ Agregar Producto</a>
    {{/ifEquals}}
    <a href="/cart/{{carritoId}}" class="nav-link">🛒 Ir al Carrito</a>
